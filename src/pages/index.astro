---
import Layout from "@src/layouts/Layout.astro";
import Welcome from "@components/Welcome.astro";
import Navbar from "@components/Navbar.astro";
import About from "@components/About.astro";
---

<Layout title="Fernando Castro">
	<main class="w-screen flex flex-col items-center justify-center">
		<Welcome />
		<div class="h-screen w-full flex flex-row px-5 py-20 md:px-8 lg:px-12">
			<div class="h-full w-1/3 mr-20">
				<h3 class="text-2xl font-medium">I'm a sofware developer.</h3>
				<Navbar />
			</div>
			<div class="h-min w-full">
				<About />
			</div>
		</div>
	</main>
</Layout>
