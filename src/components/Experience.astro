---
import Card from "@src/components/ui/Card.astro";
import i18n from "@utils/i18n";

interface Props {
	id: string;
	tailwindClass: string;
	lang: string | undefined;
}

const { id, tailwindClass, lang } = Astro.props;

const experienceContent = i18n(lang as "es" | "en", "experience") as ExperiencesItem[];


export const prerender = true;
---
<section id={id} class={tailwindClass}>
	<h1 class="text-xl font-medium mb-5 lg:hidden">Experience</h1>
	<ul class="w-full flex flex-col gap-y-5">
		{experienceContent.map((experience) => (
			<Card
				title={experience.job}
				subtitle={experience.company}
				time={experience.time}
				body={experience.description}
				url={experience.url}
				type="experience"
				badges={experience.badges}
				/>
		))}
	</ul>
</section>
