---

interface Props {
	text: string;
	icon?: string;
}

const { text, icon } = Astro.props;
---
<div class="cursor-pointer flex items-center justify-center rounded-xl bg-[var(--badge-bg)] px-4 py-1 text-black text-sm font-medium active:animate-badge-click">
	{icon && <img src={icon} alt={text} height="20" width="20" class="mr-2" />}
	{text}
</div>
