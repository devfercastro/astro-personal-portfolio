---
import ArrowTopRightOnSquareIcon from "@ui/icons/ArrowTopRightOnSquareIcon.astro";

interface Props {
	experience: {
		job: string;
		company: string;
		from: string;
		to: string;
		description: string;
	};
}

const { experience } = Astro.props;
---
<div
  class="cursor-pointer rounded-xl py-5 px-10 experience-card border border-gray-800 hover:border-white transition-all duration-100 lg:duration-300 group"
>
  <header class="flex flex-row w-full justify-between mb-2">
    <div class="flex flex-col">
      <h2 class="text-lg font-semibold">
        {experience.job} - {experience.company}
      </h2>
      <p class="text-base text-gray-500">
        {experience.from} - {experience.to}
      </p>
    </div>
    <ArrowTopRightOnSquareIcon
      height={25}
      width={25}
      class="lg:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
    />
  </header>
  <p class="text-sm mb-2">{experience.description}</p>
</div>