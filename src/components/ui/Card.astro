---
import ArrowTopRightOnSquareIcon from "@ui/icons/ArrowTopRightOnSquareIcon.astro";

interface Props {
	title: string;
	subtitle?: string;
	body: string;
	img?: string;
	url: string;
}

const { title, subtitle, body, img, url } = Astro.props;
---
<li>
  <a
    href={url}
    class="flex flex-col lg:flex-row lg:items-center lg:justify-between cursor-pointer min-h-40 rounded-md p-5 lg:p-8 border border-white lg:border-black hover:border-white transition-all duration-100 lg:duration-300 group"
    target="_blank"
  >
    {img && <img src={img} alt={title} class="w-full lg:w-1/2 h-full mb-4 lg:mb-0 object-cover rounded-md border border-white" />}
    <div class={`flex flex-col w-full text-base ${img ? 'lg:w-[45%]' : 'lg:w-full'}`}>
      <header class="flex flex-row w-full justify-between mb-2">
        <div class="flex flex-col">
          <h2 class="font-semibold">{title}</h2>
          {subtitle && <h3 class="font-medium">{subtitle}</h3>}
        </div>
        <ArrowTopRightOnSquareIcon
          height={25}
          width={25}
          class="lg:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        />
      </header>
      <p class="mb-2">{body}</p>
    </div>
  </a>
</li>