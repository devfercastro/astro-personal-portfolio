---
import ArrowTopRightOnSquareIcon from "@ui/icons/ArrowTopRightOnSquareIcon.astro";

interface Props {
	title: string;
	subtitle?: string;
	body: string;
	img?: string;
	url: string;
}

const { title, subtitle, body, img, url } = Astro.props;
---
<li
  class="flex flex-col lg:flex-row lg:items-center cursor-pointer min-h-40 rounded-md p-5 lg:px-10 border border-white lg:border-black hover:border-white transition-all duration-100 lg:duration-300 group"
>
  {img && <img src={img} alt={title} class="w-full lg:w-1/2 h-full mb-4 object-cover rounded-md mr-2 lg:mr-12" />}
  <div class="flex flex-col w-full">
    <header class="flex flex-row w-full justify-between mb-2">
        <div class="flex flex-col">
          <h2 class="text-lg font-semibold">{title}</h2>
          <h3 class="text-base font-medium">{subtitle}</h3>
        </div>
        <ArrowTopRightOnSquareIcon
          height={25}
          width={25}
          class="lg:opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        />
      </header>
      <p class="text-sm mb-2">{body}</p>
  </div>
</li>