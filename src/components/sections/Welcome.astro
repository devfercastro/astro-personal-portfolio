---
import ChevronDownIcon from "@ui/icons/ChevronDownIcon.astro";
import i18n from "@utils/i18n";

interface Props {
	tailwindClass: string;
	lang: "es" | "en";
}

const { tailwindClass, lang } = Astro.props;

export const prerender = true;
---
<section class={tailwindClass}>
  <h1
    class="font-bold text-2xl md:text-4xl lg:text-6xl animate-fade-in"
    style={{
      animationDelay: "1000ms",
      opacity: 0,
    }}
    >{i18n(lang, "welcome")}</h1>
	<button
	  id="welcomeArrow"
    class="absolute bottom-10 hidden"
    >
    <ChevronDownIcon
      id="arrowIcon"
      class="chevron-icon w-14 h-14 cursor-pointer opacity-0 animate-bounce-delayed"
      style={{
        animationDelay: "2000ms",
      }}/>
  </button>
</section>


<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const welcomeArrow = document.getElementById("welcomeArrow");
    const arrowIcon = welcomeArrow?.querySelector("#arrowIcon");
    const mainContent = document.getElementById("mainContent");

    if(welcomeArrow && mainContent && arrowIcon) {
      // Displays the button and plays the animation
      welcomeArrow.classList.remove("hidden");

      // Redirects to the main content
      welcomeArrow.addEventListener("click", () => {
        mainContent.scrollIntoView({
          behavior: "smooth"
        });
      });
    }
  });
</script>
</script>
