---
import { ChevronDownIcon } from "@heroicons/react/24/solid";

interface Props {
	tailwindClass: string;
}

const { tailwindClass } = Astro.props;

export const prerender = true;
---
<section class={tailwindClass}>
  <h1 
    class="font-bold text-2xl md:text-4xl lg:text-6xl animate-fade-in"
    style={{
      animationDelay: "1000ms",
    }}
    >Hello I'm Fernando.</h1>
	<a 
    href="#mainContent"
    class="absolute bottom-10"
    >
    <ChevronDownIcon
		className="chevron-icon w-14 h-14 cursor-pointer opacity-0 animate-bounce-delayed"
    style={{
			animationDelay: "2000ms",
		}}/>
  </a>
</section>
