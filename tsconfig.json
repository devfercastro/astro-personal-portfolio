{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@public/*": ["public/*"],
      "@ui/*": ["src/components/ui/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}
